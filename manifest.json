{
    "name": "Use Facebook Chat without distraction",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Use Facebook Chat and avoid distraction from the Facebook newsfeed.",
    "browser_action": {
        "default_icon": "icon.png"
    },
    "background": {
        "page": "bg.html"
    },
    "content_scripts": [
		{ 
			"matches": ["https://www.facebook.com/*"],
			"js": ["contentscript.js"]
		}
    ]
}
