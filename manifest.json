{
    "name": "Use Facebook Chat without distraction",
    "version": "1.0",
    "manifest_version": 2,
    "description": "Use Facebook Chat and avoid distraction from the Facebook newsfeed.",
    "browser_action": {
        "default_icon": "img/icon.png",
        "default_popup": "html/popup.html"
    },
    "background": {
        "page": "html/bg.html"
    },
    "icons": {
        "48": "img/icon.png"
    },
    "content_scripts": [
		{ 
			"matches": ["https://www.facebook.com/*"],
			"js": ["js/contentscript.js"],
            "css": ["css/hideelements.css"]
		}
    ]
}
